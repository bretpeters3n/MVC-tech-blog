{{#each posts as |post|}}
<a href="/{{post.id}}">
  <div class="card">
    <div class="card-header">
      <div class="homepage-posts">
        <div>{{post.title}}</div>
        <div>Posted by {{post.user.username}} on {{format_date created_at}}</div>
      </div>
    </div>
    <div class="card-body">
      <p>{{post.post_content}}</p>
    </div>
  </div>
</a>
{{/each}}